{
	"nodeModulesDir": "auto",
	"imports": {
		"@hono/node-server": "npm:@hono/node-server@^1.19.9",
		"cheerio": "npm:cheerio@^1.2.0",
		"hono": "npm:hono@^4.11.9"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-explicit-any"
			]
		}
	},
	"fmt": {
		"useTabs": true,
		"trailingCommas": "onlyMultiLine",
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": [
			"src/**/*.ts"
		],
		"nextControlFlowPosition": "sameLine",
		"operatorPosition": "nextLine",
		"singleBodyPosition": "nextLine",
		"typeLiteral.separatorKind": "semiColon",
		"useBraces": "preferNone"
	},
	"tasks": {
		"start": "bash -c 'deno -A src/index.ts 5000 &>log & echo $! >pid'",
		"stop": "bash -c 'kill $(<pid)'"
	}
}