{
	"nodeModulesDir": "auto",
	"imports": {
		"@googleapis/drive": "npm:@googleapis/drive@^20.1.0",
		"@hono/node-server": "npm:@hono/node-server@^1.19.9",
		"dotenv": "npm:dotenv@^17.2.4",
		"hono": "npm:hono@^4.11.8",
		"puppeteer": "npm:puppeteer@^24.37.2"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-explicit-any"
			]
		}
	},
	"fmt": {
		"useTabs": true,
		"trailingCommas": "onlyMultiLine",
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": [
			"src/**/*.ts"
		],
		"nextControlFlowPosition": "sameLine",
		"operatorPosition": "nextLine",
		"singleBodyPosition": "nextLine",
		"typeLiteral.separatorKind": "semiColon",
		"useBraces": "preferNone"
	},
	"allowScripts": ["npm:puppeteer@24.37.2"]
}